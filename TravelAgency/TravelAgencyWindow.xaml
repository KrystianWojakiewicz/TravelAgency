<Window x:Class="TravelAgency.TravelAgencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency"
        mc:Ignorable="d"
        Title="Super Exclusive Travel Agency" Height="450" Width="800">

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="337*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Canvas HorizontalAlignment="Left" Height="36.034" VerticalAlignment="Top" Width="793.6" Grid.ColumnSpan="5" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">
            <Button Content="Logout" Canvas.Left="694.6" Canvas.Top="6.074" Width="75" Background="#FFB5B6CB"/>
            <Button Content="Shopping Cart" HorizontalAlignment="Left" VerticalAlignment="Top" Width="84.6" Background="#FFB5B6CB" Height="19.96" Canvas.Left="582.6" Canvas.Top="6.074"/>
        </Canvas>
        <ListBox x:Name="offerListBox" HorizontalAlignment="Left" Height="317.321" Margin="10,10,0,0" VerticalAlignment="Top" Width="319.829" Grid.Row="2"/>
        <TextBox HorizontalAlignment="Left" Height="21.858" IsReadOnly="True" TextWrapping="Wrap" Text="Offers" VerticalAlignment="Top" Width="85.6" Margin="10,21.2,0,0" Grid.Row="1" Background="#FFB5B6CB"/>
    </Grid>
</Window>
